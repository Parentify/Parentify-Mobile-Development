<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light"
    android:padding="16dp"
    tools:context=".ui.auth.ForgotActivity">

    <TextView
        android:id="@+id/tv_parentify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-60dp"
        android:layout_marginTop="-10dp"
        android:text="@string/txt_parentify"
        android:textColor="@color/pink"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.168"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.062"
        tools:ignore="TextContrastCheck" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="76dp"
        android:layout_height="108dp"
        android:layout_marginStart="-20dp"
        android:src="@drawable/ic_logo_paren"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="ContentDescription,VisualLintBounds" />

    <TextView
        android:id="@+id/tv_forgot_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tv_forgot_password_2"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.152" />

    <!-- TextView untuk Username atau Email -->
    <TextView
        android:id="@+id/tv_forgot_uname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username or Email"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_forgot_pass"
        app:layout_constraintVertical_bias="0.063" />

    <!-- EditText untuk Username atau Email -->
    <EditText
        android:id="@+id/et_forgot_uname"
        android:layout_width="368dp"
        android:layout_height="48dp"
        android:background="@drawable/ic_box_text"
        android:hint="@string/txt_username_anda"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.023"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_forgot_uname"
        app:layout_constraintVertical_bias="0.016"
        tools:ignore="Autofill,TextContrastCheck" />

    <!-- TextView untuk New Password -->
    <TextView
        android:id="@+id/tv_forgot_sandi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_new_pass"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_forgot_uname"
        app:layout_constraintVertical_bias="0.023" />

    <!-- EditText untuk New Password -->
    <EditText
        android:id="@+id/et_forgot_sandi"
        android:layout_width="368dp"
        android:layout_height="48dp"
        android:background="@drawable/ic_box_text"
        android:hint="@string/txt_enter_new_pass"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_forgot_sandi"
        app:layout_constraintVertical_bias="0.02"
        tools:ignore="Autofill,TextContrastCheck" />

    <!-- TextView untuk Confirm Password -->
    <TextView
        android:id="@+id/tv_confirm_sandi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_confirm_password"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_forgot_sandi"
        app:layout_constraintVertical_bias="0.039" />

    <!-- EditText untuk Confirm Password -->
    <EditText
        android:id="@+id/et_confirm_sandi"
        android:layout_width="368dp"
        android:layout_height="48dp"
        android:background="@drawable/ic_box_text"
        android:hint="@string/txt_confirm_pass"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_confirm_sandi"
        app:layout_constraintVertical_bias="0.014"
        tools:ignore="Autofill,TextContrastCheck" />

    <!-- Guideline untuk layout vertical center -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <Button
        android:id="@+id/btn_forgot_back"
        android:layout_width="382dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:text="BACK"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.918"
        tools:ignore="VisualLintButtonSize" />

    <Button
        android:id="@+id/btn_reset"
        android:layout_width="382dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:text="RESET PASSWORD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="VisualLintButtonSize" />
</androidx.constraintlayout.widget.ConstraintLayout>
